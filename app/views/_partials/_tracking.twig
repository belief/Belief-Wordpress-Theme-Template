{% if settings.gtm_tracking %}
	{{ settings.gtm_tracking }}
{% elseif settings.ga_tracking_id %}
<script type="text/javascript">
    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', '{{ settings.ga_tracking_id }}']);
    _gaq.push(['_trackPageview']);
    (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();
</script>
{% endif %}

{% if post %}
    <script>window.dataLayer = window.dataLayer || []; window.dataLayer.push({{ fn( 'GTMBasic', post ) }})</script>
{% else %}
    <script>window.dataLayer = window.dataLayer || []; window.dataLayer.push({{ fn( 'GTMBasic' ) }})</script>
{% endif %}